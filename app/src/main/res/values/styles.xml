<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="headerSearchStyle">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textSize">@dimen/header_size</item>
        <item name="lineHeight">41sp</item>
        <item name="android:letterSpacing">0.06</item>
    </style>

    <style name="smallHeaderStyle">
        <item name="fontFamily">@font/sfprodisplay_bold</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:lineSpacingExtra">6sp</item>
    </style>

    <style name="backgroundBars">
        <item name="android:background">@drawable/rounded_box</item>
    </style>

    <style name="searchViewStyle" parent="backgroundBars">
        <item name="height">36dp</item>
    </style>

</resources>